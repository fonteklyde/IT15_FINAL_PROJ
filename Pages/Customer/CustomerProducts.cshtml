@page
@model IT15_Final_Proj.Pages.Customer.CustomerProductsModel
@{
	ViewData["Title"] = "Available Products";
}

<h2 class="text-2xl font-bold mb-4">Available Products</h2>

<form method="get" class="mb-6">
    <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Search product name..."
           class="p-2 border rounded w-1/2" />
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded ml-2">Search</button>
</form>


<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    @foreach (var item in Model.VendorProducts)
    {
        <div class="border rounded-lg p-4 shadow-md">
            <img src="@item.PictureUrl" alt="@item.Name" class="w-full h-48 object-cover rounded mb-3" style="display: block; margin:auto; width:50%;" />
            <h3 class="text-lg font-semibold">@item.Name</h3>
            <p class="text-gray-700">₱@item.SellingPrice.ToString("F2")</p>
            <p class="text-sm text-green-600">Available Stock: @item.Quantity</p>
            <p class="text-sm text-gray-500 mb-2">Seller: @item.VendorEmail</p>
            <form method="post" asp-page="/Customer/Cart">
                <input type="hidden" name="ProductId" value="@item.ProductId" />
                <input type="hidden" name="VendorEmail" value="@item.VendorEmail" />
                <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Add to Cart</button>
            </form>
        </div>
    }