@page
@model IT15_Final_Proj.Pages.Tools.HashPasswordModel
@{
    ViewData["Title"] = "Hash Password Tool";
}

<h2>Hash a Password (Development Tool)</h2>

<form method="post">
    <div class="form-group">
        <label for="PlainPassword">Enter Plain Password:</label>
        <input asp-for="PlainPassword" class="form-control" type="password" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Generate Hash</button>
</form>

@if (!string.IsNullOrEmpty(Model.HashedPassword))
{
    <div class="alert alert-success mt-3">
        <strong>Hashed Password:</strong>
        <code>@Model.HashedPassword</code>
    </div>
}
