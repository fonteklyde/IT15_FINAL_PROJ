@page "{id:int}"
@model IT15_Final_Proj.Pages.Supplier.DeleteProductModel
@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="text-xl font-semibold mb-4 text-red-700">Delete Product</h2>

<div class="table-auto w-full border border-gray-300 p-4 rounded bg-red-50">
    <p>Are you sure you want to delete the product:</p>

    <h3 class="font-bold text-lg mt-2 mb-1">@Model.Product.Name</h3>
    <p>Price: ₱@Model.Product.Price</p>
    <p>Quantity: @Model.Product.Quantity</p>
    <img src="@Model.Product.PictureUrl" alt="Product Image" class="my-3 w-[150px] h-[100px] object-cover rounded" />

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded">Confirm Delete</button>
        <a asp-page="/Supplier/Products" class="ml-2 inline-block text-blue-700 hover:underline">Cancel</a>
    </form>
</div>
