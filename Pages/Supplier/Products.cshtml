@page
@model IT15_Final_Proj.Pages.Supplier.ProductsModel
@{
    ViewData["Title"] = "My Products";
}

<h2 class="text-2xl font-bold mb-4">My Products</h2>

@if (Model.Products == null || !Model.Products.Any())
{
    <p>You haven't added any products yet.</p>
}
else
{
    <table class="table-auto w-full border border-collapse border-gray-300">
        <thead class="bg-green-700 text-black">
            <tr>
                <th class="p-2 border">Name</th>
                <th class="p-2 border">Price</th>
                <th class="p-2 border">Quantity</th>
                <th class="p-2 border">Image</th>
                <th class="p-2 border">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr class="text-center">
                    <td class="p-2 border">@product.Name</td>
                    <td class="p-2 border">₱@product.Price</td>
                    <td class="p-2 border">@product.Quantity</td>
                    <td class="p-2 border">
                        <img src="@product.PictureUrl" alt="@product.Name" style="width: 150px; height: 150px;" />
                    </td>
                    <td class="p-2 border">
                        <a asp-page="/Supplier/Edit" asp-route-id="@product.Id" class="bg-yellow-400 hover:bg-yellow-500 text-black font-semibold py-1 px-3 rounded mr-2">Edit</a>
                        <a asp-page="/Supplier/Delete" asp-route-id="@product.Id" class="bg-red-600 hover:bg-red-700 text-black font-semibold py-1 px-3 rounded">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
