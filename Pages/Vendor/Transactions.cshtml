@page
@model IT15_Final_Proj.Pages.Vendor.TransactionsModel
@{
	ViewData["Title"] = "Your Transactions";
}

<h2 class="text-2xl font-bold mb-4">Transaction History</h2>

@if (Model.PaidRequests.Any())
{
    <table class="table-auto w-full border border-collapse border-gray-300">
        <thead class="bg-green-700 text-black">
            <tr class="text-center">
                <th class="p-2 border">Product</th>
                <th class="p-2 border">Supplier</th>
                <th class="p-2 border">Quantity</th>
                <th class="p-2 border">Paid At</th>
                <th class="p-2 border">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.PaidRequests)
            {
                <tr class="text-center">
                    <td class="p-2 border">@request.Product?.Name</td>
                    <td class="p-2 border">@request.SupplierEmail</td>
                    <td class="p-2 border">@request.Quantity</td>
                    <td>@request.PaidAt?.ToString("g")</td>
                    <td class="p-2 border text-green-600 font-bold">@request.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No completed transactions found.</p>
}
